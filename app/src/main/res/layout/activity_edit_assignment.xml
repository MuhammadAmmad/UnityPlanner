<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_assignment_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="invisible"
    tools:context="com.nbdeg.unityplanner.addAssignment">

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textCapSentences"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/assignment_edit_name"
        android:hint="@string/assignment_name"
        android:padding="5dp"
        android:textSize="18sp"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/assignment_edit_name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:layout_below="@id/assignment_edit_name"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Spinner
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/class_edit_spinner"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar"
            android:layout_weight="1"
            android:background="@null"/>
        <!--android:layout_marginBottom="3dp"/>-->

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c0c0c0"/>

        <android.support.design.widget.TextInputEditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/due_date_edit_edittext"
            android:padding="5dp"
            android:focusable="false"
            android:hint="@string/due_date"
            android:textSize="16sp"
            android:background="@null"
            tools:ignore="TextFields" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/linearLayout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentStart="true"
        android:id="@+id/percent_complete"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/completion"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp"/>
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/percent_complete_edit"
            android:layout_marginBottom="1dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/percent_complete"/>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/extra_homework_info_edit"
        android:hint="@string/extra_infomation"
        android:textSize="16sp"
        android:layout_below="@id/percent_complete"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:background="@null" />

    <Button
        android:id="@+id/delete_assignment"
        style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="deleteAssignment"
        android:text="@string/delete"
        android:textColor="#FFFF4444" />
</RelativeLayout>
