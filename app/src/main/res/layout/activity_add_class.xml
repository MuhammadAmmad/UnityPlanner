<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_homework"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nbdeg.unityplanner.addAssignment">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textCapWords"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/class_name"
        android:hint="@string/class_name"
        android:padding="5dp"
        android:textSize="18sp"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/class_name"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:inputType="textCapWords"
        android:ems="10"
        android:id="@+id/class_teacher"
        android:hint="@string/teacher_name"
        android:textSize="16sp"
        android:layout_below="@id/class_name"
        android:layout_alignParentStart="true"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:background="@null" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/class_teacher"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:layout_below="@id/class_teacher"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/class_start_date"
            android:padding="5dp"
            android:focusable="false"
            android:hint="@string/start_date"
            android:textSize="16sp"
            android:background="@null"
            android:gravity="center"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#c0c0c0"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/class_end_date"
            android:padding="5dp"
            android:focusable="false"
            android:hint="@string/end_date"
            android:textSize="16sp"
            android:background="@null"
            android:gravity="center"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/linearLayout"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:inputType="number"
        android:id="@+id/class_room"
        android:padding="5dp"
        android:hint="@string/room_number"
        android:textSize="16sp"
        android:background="@null"
        android:layout_below="@id/linearLayout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@id/class_room"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:inputType="textCapWords"
        android:id="@+id/class_building"
        android:padding="5dp"
        android:hint="@string/building_name"
        android:textSize="16sp"
        android:background="@null"
        android:layout_below="@id/class_room"/>
</RelativeLayout>
